{% extends 'base.html.twig' %}

{% import '_macro.html.twig' as macro %}

{% block title %}{{ event.name }}{% endblock %}

{% block content %}
    <h2>{{ event.name }}</h2>

    <h3>Talks</h3>

    {% for talk in event.orderedTalks %}
        <h4>{{ talk.title }} - <cite>{{ talk.speaker.name }}</cite> {{ macro.display_rating(talk.averageRating) }}</h4>

        <blockquote class="mb-1">
            <p class="mb-0">
                {{ talk.description|length > 200 ? (talk.description|slice(0, 200) ~ 'â€¦') : talk.description }}
            </p>
        </blockquote>

        <p><a href="{{ path('talk_details', {id: talk.id}) }}">View details</a></p>
    {% endfor %}
{% endblock %}
